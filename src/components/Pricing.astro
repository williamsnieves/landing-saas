---
import { useTranslations } from '@utils/i18n';

interface Props {
  lang: 'en' | 'es' | 'de' | 'pt' | 'fr' | 'zh';
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);

const pricingTiers = [
  {
    name: t('pricing.starter.name'),
    price: '$0',
    period: t('pricing.period'),
    description: t('pricing.starter.desc'),
    features: [
      t('pricing.feature.users'),
      t('pricing.feature.projects'),
      t('pricing.feature.storage'),
      t('pricing.feature.support'),
    ],
    cta: t('pricing.starter.cta'),
    popular: false,
  },
  {
    name: t('pricing.pro.name'),
    price: '$29',
    period: t('pricing.period'),
    description: t('pricing.pro.desc'),
    features: [
      t('pricing.feature.users.20'),
      t('pricing.feature.projects.adv'),
      t('pricing.feature.storage.20'),
      t('pricing.feature.support.prio'),
      t('pricing.feature.analytics'),
    ],
    cta: t('pricing.pro.cta'),
    popular: true,
  },
  {
    name: t('pricing.enterprise.name'),
    price: '$99',
    period: t('pricing.period'),
    description: t('pricing.enterprise.desc'),
    features: [
      t('pricing.feature.users.unlimited'),
      t('pricing.feature.projects.adv'),
      t('pricing.feature.storage.unlimited'),
      t('pricing.feature.support.247'),
      t('pricing.feature.analytics.adv'),
      t('pricing.feature.custom'),
      t('pricing.feature.sso'),
    ],
    cta: t('pricing.enterprise.cta'),
    popular: false,
  },
];
---

<section
  id="pricing"
  class="py-24 bg-white dark:bg-gray-900 relative overflow-hidden transition-colors duration-300"
>
  <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-20">
      <h2
        class="text-base font-semibold text-blue-600 dark:text-blue-400 tracking-wide uppercase mb-3"
      >
        {t('pricing.badge')}
      </h2>
      <p class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
        {t('pricing.title')}
      </p>
      <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
        {t('pricing.subtitle')}
      </p>
    </div>

    <!-- Pricing Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {
        pricingTiers.map((tier) => (
          <div
            class={`relative rounded-2xl p-8 transition-all duration-300 flex flex-col ${
              tier.popular
                ? 'bg-white dark:bg-gray-800 border-2 border-blue-500 shadow-xl scale-105 z-10'
                : 'bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 hover:border-blue-200 dark:hover:border-blue-800 hover:shadow-lg'
            }`}
          >
            {tier.popular && (
              <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-4 py-1 rounded-full text-sm font-semibold shadow-md whitespace-nowrap">
                {t('pricing.pro.popular')}
              </div>
            )}

            <div class="mb-8">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                {tier.name}
              </h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">
                {tier.description}
              </p>
              <div class="flex items-baseline gap-1">
                <span class="text-4xl font-bold text-gray-900 dark:text-white">
                  {tier.price}
                </span>
                <span class="text-gray-500 dark:text-gray-400">
                  /{tier.period}
                </span>
              </div>
            </div>

            <ul class="space-y-4 mb-8 flex-1">
              {tier.features.map((feature) => (
                <li class="flex items-start gap-3 text-gray-600 dark:text-gray-300">
                  <svg
                    class={`w-5 h-5 flex-shrink-0 mt-0.5 ${tier.popular ? 'text-blue-600' : 'text-gray-400'}`}
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span class="text-sm">{feature}</span>
                </li>
              ))}
            </ul>

            <a
              href={
                tier.cta === t('pricing.enterprise.cta')
                  ? '#contact'
                  : '#get-started'
              }
              class={`w-full inline-flex items-center justify-center px-6 py-3 rounded-xl font-semibold transition-all duration-200 ${
                tier.popular
                  ? 'bg-gradient-to-r from-blue-600 to-indigo-600 text-white hover:from-blue-700 hover:to-indigo-700 shadow-md hover:shadow-lg'
                  : 'bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 dark:hover:border-gray-600'
              }`}
            >
              {tier.cta}
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
